# Install Spotifyd
RUN cd /tmp && \
    wget -q https://github.com/Spotifyd/spotifyd/releases/download/v0.3.5/spotifyd-linux-default-full.tar.gz || \
    wget -q https://github.com/Spotifyd/spotifyd/releases/download/v0.3.5/spotifyd-linux-armhf-full.tar.gz || \
    echo "Spotifyd download failed, will install later" && \
    tar xzf spotifyd-*.tar.gz 2>/dev/null && \
    mv spotifyd /usr/local/bin/ 2>/dev/null && \
    chmod +x /usr/local/bin/spotifyd 2>/dev/null || \
    echo "Spotifyd installation will be completed manually"

# Setup nginx
COPY docker/nginx.conf /etc/nginx/sites-available/default

# Setup supervisor
COPY docker/supervisord.conf /etc/supervisor/conf.d/supervisord.conf

# Create necessary directories
RUN mkdir -p /app/data /app/logs /app/config /app/scripts

# Make scripts executable
COPY scripts/*.sh /app/scripts/ 2>/dev/null || true
RUN chmod +x /app/scripts/*.sh 2>/dev/null || true

EXPOSE 80 443

HEALTHCHECK --interval=30s --timeout=3s --start-period=40s --retries=3 \
    CMD curl -f http://localhost/health || exit 1

CMD ["/usr/bin/supervisord", "-c", "/etc/supervisor/conf.d/supervisord.conf"]